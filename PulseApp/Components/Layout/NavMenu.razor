@code {
    private void GoToPageList(string propName)
    {
        var tmp = NavigationManager.Uri;
        var filterString = "";

        if (propName == nameof(Request))
        {
            var requestFilter = new RequestFilter()
            {
                Status = Domain.enums.Status.AtWork
            };
            filterString = JsonSerializer.Serialize(requestFilter);
        }
        else if (propName == nameof(Experience))
        {
            var experienceFilter = new ExperienceFilter()
            {
                IsWorkDone = false
            };
            filterString = JsonSerializer.Serialize(experienceFilter);
        }

        filterString = Convert.ToBase64String(Encoding.UTF8.GetBytes(filterString));

        var finalUrl = $"";
        if (propName == nameof(Request))
            finalUrl = $"/requests/1/{filterString}";
        else if (propName == nameof(Experience))
            finalUrl = $"/experiencies/1/{filterString}";

        NavigationManager.NavigateTo(finalUrl, true);
    }
}
